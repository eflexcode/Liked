<?xml version="1.0" encoding="utf-8"?>
<layout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="start"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="7dp"
        android:gravity="start"
        android:maxWidth="300dp">

        <TextView
            android:id="@+id/sentDateAgo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_text_chat"
            android:layout_alignStart="@id/message_text_chat"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:text="Dec 30 20202"
            android:textColor="@color/grey"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <com.vanniktech.emoji.EmojiTextView
            android:id="@+id/message_text_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/you_chat"
            android:maxWidth="300dp"
            android:padding="9dp"
            android:text="As we all know that RecyclerView is a UI component to show lists in Android. In this tutorial, you will learn, How to create a RecyclerView with Multiple View Types in Java Android. Itâ€™s is a chat App example. In this example, 2 types of views (text message in and out) are considered. "
            android:textColor="#FFFFFF"
            android:textIsSelectable="true"
            android:textSize="16sp"
            android:visibility="gone" />


        <!--    </RelativeLayout>-->

        <ImageView
            android:id="@+id/isSent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/message_text_chat"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-3dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/sentDateAgo"
            android:padding="3dp"
            android:src="@drawable/ic_done"
            android:textColor="#A5A5A5"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/img"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="2dp"
            android:transitionName="v"
            android:layout_marginBottom="3dp"
            android:background="@drawable/you_chat"
            android:padding="3dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/sentImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/you_chat"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ba"
                    android:transitionName="v"
                    android:visibility="visible" />
            </androidx.cardview.widget.CardView>


        </RelativeLayout>


        <TextView
            android:id="@+id/sentDateAgo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img"
            android:layout_alignStart="@id/img"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:text="Dec 30 20202"
            android:textColor="@color/grey"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/isSent2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/img"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-3dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/sentDateAgo2"
            android:padding="3dp"
            android:src="@drawable/ic_done"
            android:textColor="#A5A5A5"
            android:visibility="visible" />

    </RelativeLayout>
</layout>