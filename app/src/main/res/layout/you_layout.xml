    <RelativeLayout
        android:id="@+id/sentText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sentDate"
        android:layout_margin="2dp"
        android:gravity="start">

        <TextView
            android:id="@+id/message_text_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:textIsSelectable="true"
            android:layout_marginEnd="2dp"
            android:background="@drawable/you_chat"
            android:padding="6dp"
            android:text=""
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/isSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_text_chat"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="1dp"
            android:textColor="#A5A5A5"
            android:textSize="11sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/sentImage"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="3dp"
        android:src="@drawable/ba"
        android:visibility="gone" />

    <TextView
        android:id="@+id/sentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        android:textColor="#A5A5A5"
        android:textSize="11sp"
        android:textStyle="bold" />

</RelativeLayout>